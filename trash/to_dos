$list_array = array();

while($details = mysql_fetch_array($result))
{	
	$array = array(
		"message" => $details["message"],
		"sender" => $details["sender"],
		"time" => $details["time"]
	);
	array_push($list_array, $array);
}

echo json_encode($list_array);
